		<module>portfelx-bungee-bootstrap</module>
		<module>portfelx-bungee</module>
		<module>portfelx-bungee-assembly</module>
		<module>portfelx-velocity-bootstrap</module>
		<module>portfelx-velocity</module>
		<module>portfelx-velocity-assembly</module>
		<module>portfelx-api</module>
	</modules>
</project>
