	<!-- Build -->
	<build>
		<defaultGoal>clean package</defaultGoal>
		<finalName>${project.name}-${project.version}</finalName>

		<pluginManagement>
			<plugins>
				<!-- Compile plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.1</version>
					<configuration>
						<source>1.8</source>
						<target>1.8</target>
						<showDeprecation>true</showDeprecation>
					</configuration>
				</plugin>
				<!-- Git Commit plugin -->
				<plugin>
					<groupId>io.github.git-commit-id</groupId>
					<artifactId>git-commit-id-maven-plugin</artifactId>
					<version>5.0.0</version>
					<executions>
						<execution>
							<id>get-the-git-infos</id>
							<goals>
								<goal>revision</goal>
							</goals>
							<phase>initialize</phase>
						</execution>
					</executions>
					<configuration>
						<dotGitDirectory>${project.parent.basedir}/.git</dotGitDirectory>
					</configuration>
				</plugin>
				
				<plugin>
					<groupId>com.github.wvengen</groupId>
					<artifactId>proguard-maven-plugin</artifactId>
					<version>2.4.0</version>
					<executions>
						<execution>
							<phase>package</phase>
							<goals><goal>proguard</goal></goals>
						</execution>
					</executions>
					<configuration>
						<obfuscate>true</obfuscate>
						<injar>${finalName}.jar</injar>
						<options>
							<option>-allowaccessmodification</option>
							<option>-dontshrink</option>
							<option>-keep public class me.szumielxd.portfel.bukkit.PortfelBukkitImpl { *; }</option>
							<option>-keep public class net.kyori.** { *; }</option>
							<option>-keep public class net.** { *; }</option>
							<option>-dontnote me.clip.**</option>
							<option>-dontnote be.maximvdw.**</option>
							<option>-dontnote me.szumielxd.portfel.lib.**</option>
							<option>-dontnote java.**</option>
							<option>-dontnote sun.**</option>
							<option>-dontnote com.sun.**</option>
							<option>-dontnote org.**</option>
							<option>-dontnote javax.**</option>
							<option>-dontnote com.github.**</option>
							<option>-dontnote com.google.**</option>
							<option>-dontnote com.**</option>
							<option>-dontnote net.**</option>
							<option>-dontwarn com.**</option>
							<option>-dontwarn org.**</option>
							<option>-dontwarn net.**</option>
							<option>-dontwarn net.**</option>
							<option>-dontwarn me.clip.**</option>
						</options>
						<libs>
							<lib>${java.home}/jmods/java.base.jmod</lib>
							<lib>${java.home}/jmods/java.logging.jmod</lib>
							<lib>${java.home}/jmods/java.desktop.jmod</lib>
							<lib>${java.home}/jmods/java.sql.jmod</lib>
						</libs>
						<exclusions>
							<exclusion>
								<groupId>${project.groupId}</groupId>
								<artifactId>portfelx-common</artifactId>
							</exclusion>
							<exclusion>
								<groupId>${project.groupId}</groupId>
								<artifactId>portfelx-api</artifactId>
							</exclusion>
							<exclusion>
								<groupId>${project.groupId}</groupId>
								<artifactId>portfelx-bukkit</artifactId>
							</exclusion>
						</exclusions>
					</configuration>
				</plugin>
				
				<!-- Assembly plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>3.3.0</version>
					<executions>
						<execution>
							<phase>package</phase>
							<goals>
								<goal>single</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<finalName>${finalName}</finalName>
						<appendAssemblyId>false</appendAssemblyId>
						<descriptorRefs>
							<descriptorRef>jar-with-dependencies</descriptorRef>
						</descriptorRefs>
						<archive>
							<index>false</index>
							<addMavenDescriptor>false</addMavenDescriptor>
							<manifest>
								<packageName>${package}</packageName>
							</manifest>
							<manifestEntries>
								<Created-By>${author}</Created-By>
							</manifestEntries>
						</archive>
					</configuration>
				</plugin>
				
				<!-- Jar plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>3.2.0</version>
				</plugin>
				
				<!-- Shade plugin -->
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-shade-plugin</artifactId>
					<version>3.2.4</version>
					<executions>
						<execution>
							<phase>package</phase>
							<goals>
								<goal>shade</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<filters>
							<filter>
								<artifact>*:*</artifact>
								<excludes>
									<exclude>META-INF/maven/**</exclude>
								</excludes>
							</filter>
						</filters>
						<relocations>
							<relocation>
								<pattern>com.zaxxer</pattern>
								<shadedPattern>${package}.lib.com.zaxxer</shadedPattern>
							</relocation>
							<relocation>
								<pattern>me.lucko.jarrelocator</pattern>
								<shadedPattern>${package}.lib.me.lucko.jarrelocator</shadedPattern>
							</relocation>
							<relocation>
								<pattern>org.objectweb</pattern>
								<shadedPattern>${package}.lib.org.objectweb</shadedPattern>
							</relocation>
							<!--relocation>
								<pattern>com.google.gson</pattern>
								<shadedPattern>${package}.lib.com.google.gson</shadedPattern>
							</relocation-->
							<relocation>
								<pattern>net.kyori.adventure.platform</pattern>
								<shadedPattern>${package}.lib.net.kyori.adventure.platform</shadedPattern>
							</relocation>
							<relocation>
								<pattern>net.kyori.examination</pattern>
								<shadedPattern>${package}.lib.net.kyori.adventure.examination</shadedPattern>
							</relocation>
							<!--relocation>
								<pattern>net.kyori.adventure.text.serializer</pattern>
								<shadedPattern>${package}.lib.net.kyori.adventure.text.serializer</shadedPattern>
							</relocation-->
							<relocation>
								<pattern>net.kyori.adventure</pattern>
								<shadedPattern>${package}.lib.net.kyori.adventure</shadedPattern>
							</relocation>
							<relocation>
								<pattern>org.simpleyaml</pattern>
								<shadedPattern>${package}.lib.org.simpleyaml</shadedPattern>
							</relocation>
							<relocation>
								<pattern>org.yaml.snakeyaml</pattern>
								<shadedPattern>${package}.lib.org.yaml.snakeyaml</shadedPattern>
							</relocation>
							<relocation>
								<pattern>com.github.curiousoddman.rgxgen</pattern>
								<shadedPattern>${package}.lib.com.github.curiousoddman.rgxgen</shadedPattern>
							</relocation>
							
							<!-- Yes, I'm monster not programmer. I use relocation to replace variables -->
							<relocation>
								<!-- Alphanumeric only... -->
								<pattern>id----</pattern>
								<shadedPattern>${pluginId}</shadedPattern>
							</relocation>
							<relocation>
								<pattern>@pluginName@</pattern>
								<shadedPattern>${pluginName}</shadedPattern>
							</relocation>
							<relocation>
								<pattern>@version@</pattern>
								<shadedPattern>${project.version}</shadedPattern>
							</relocation>
							<relocation>
								<pattern>@author@</pattern>
								<shadedPattern>${author}</shadedPattern>
							</relocation>
							<relocation>
								<pattern>@description@</pattern>
								<shadedPattern>${project.description}</shadedPattern>
							</relocation>
						</relocations>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

